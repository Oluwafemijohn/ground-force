<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.PhoneActivationFragment">

    <ImageView
        android:id="@+id/phone_activ_iv_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/phone_activ_tool_bar_arrow"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="@+id/phone_activ_tv_app_bar"
        app:layout_constraintEnd_toStartOf="@+id/phone_activ_tv_app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phone_activ_tv_app_bar"
        app:tint="@color/colorTextPrimary" />

    <TextView
        android:id="@+id/phone_activ_tv_app_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/titillium_web_bold"
        android:text="@string/phone_activ_phone_verification"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phone_activ_tv_enter_phone_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="112dp"
        android:layout_marginRight="37dp"
        android:fontFamily="@font/roboto"
        android:text="Enter Phone Number"
        android:textColor="#1C1C1C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="90dp" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/phone_activ_sp_country_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/phone_activ_hbb_background"
        app:ccpDialog_fastScroller_bubbleColor="@color/colorAccent"
        app:ccpDialog_fastScroller_bubbleTextAppearance="@style/countryList"
        app:ccp_defaultNameCode="NG"
        app:ccp_showNameCode="false"
        app:ccp_textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/phone_activ_tv_enter_phone_no"
        app:layout_constraintTop_toTopOf="@+id/phone_activ_et_phone_no" />

    <EditText
        android:id="@+id/phone_activ_et_phone_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:digits="0123456789"
        android:inputType="phone"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:paddingBottom="13dp"
        android:singleLine="true"
        android:maxLength="10"
        app:layout_constraintEnd_toEndOf="@+id/phone_activ_tv_enter_phone_no"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/phone_activ_sp_country_picker"
        app:layout_constraintTop_toBottomOf="@+id/phone_activ_tv_enter_phone_no" />

    <TextView
        android:id="@+id/phone_activ_tv_verify_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.6dp"
        android:fontFamily="@font/roboto"
        android:text="@string/textToUser"
        android:textAlignment="center"
        android:textColor="#DE000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/phone_activ_et_phone_no"
        app:layout_constraintStart_toStartOf="@+id/phone_activ_sp_country_picker"
        app:layout_constraintTop_toBottomOf="@+id/phone_activ_et_phone_no" />


    <TextView
        android:id="@+id/phone_activ_terms_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/TAndC"
        android:textSize="14.5sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3" />

    <Button
        android:id="@+id/phone_activ_bt_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="30dp"
        android:text="Continue"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:background="@drawable/btn_styles"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/phone_activ_et_phone_no"
        app:layout_constraintStart_toStartOf="@+id/phone_activ_sp_country_picker" />

</androidx.constraintlayout.widget.ConstraintLayout>