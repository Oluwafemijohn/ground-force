<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.CreateProfileFragmentThree"
    android:fillViewport="true"
    >


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

<!--    Tool bar -->
    <include
        android:id="@+id/fragment_create_profile_three_ic"
        layout="@layout/toolbar_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    Text view for bank detail -->
    <TextView
        android:id="@+id/fragment_create_profile_two_contact_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="35.22dp"
        android:text="@string/bank_details_str"
        android:textStyle="bold"
        style="@style/colorPrimaryBlackMediumText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_create_profile_three_ic" />

<!--   Text view for bank name  -->
    <TextView
        android:id="@+id/fragment_create_profile_three_bank_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank_name_str"
        style="@style/colorTertiaryGreyExtraSmallText"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="@+id/fragment_create_profile_two_contact_details_tv"
        app:layout_constraintTop_toBottomOf="@+id/fragment_create_profile_two_contact_details_tv" />


<!--    Auto complete text view for email -->
    <Spinner
        android:id="@+id/fragment_create_profile_bank_name_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:paddingStart="16dp"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:paddingEnd="16dp"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:spinnerMode="dropdown"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_create_profile_three_bank_name_tv" />

<!--  Text view for account number   -->
    <TextView
        android:id="@+id/fragment_create_profile_three_account_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="@string/account_number"
        style="@style/colorTertiaryGreyExtraSmallText"
        app:layout_constraintStart_toStartOf="@+id/fragment_create_profile_three_bank_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/fragment_create_profile_bank_name_sp" />

<!--    Edit text for account number -->
    <EditText
        android:id="@+id/fragment_create_profile_three_account_number_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_create_profile_three_account_number_tv" />

<!--    Done button to navigate to verify location-->
    <Button
        android:id="@+id/fragment_create_profile_three_done_btn"
        style="@style/colorWhiteSmallText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/curved_primary_fill_button"
        android:enabled="false"
        android:fontFamily="@font/roboto"
        android:text="@string/done_profile_str"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_create_profile_three_account_number_et"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
