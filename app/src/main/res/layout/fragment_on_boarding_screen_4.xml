<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    tools:context=".ui.main.OnBoardingScreen4Fragment">

    <ImageView
        android:id="@+id/iv_splash_screen_image_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/lagos_girl"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/onBoardingScreen_1Fragment_tv_doMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:fontFamily="@font/titillium_web_bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/screen_3_text1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_splash_screen_image_3"/>
    <TextView
        android:id="@+id/onBoardingScreen_1Fragment_tv_moreMissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="37dp"
        android:text="@string/screen_3_text2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/onBoardingScreen_1Fragment_tv_doMore"
        app:layout_constraintStart_toStartOf="@+id/onBoardingScreen_1Fragment_tv_doMore"
        app:layout_constraintTop_toBottomOf="@id/onBoardingScreen_1Fragment_tv_doMore"/>
</androidx.constraintlayout.widget.ConstraintLayout >