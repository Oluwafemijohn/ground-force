<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.ResetPasswordFragment"
        >
        <!--        background image-->
        <ImageView
            android:id="@+id/login_man_on_street_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:alpha=".7"
            android:contentDescription="@string/landing_background_desc_str"
            android:scaleType="centerCrop"
            android:src="@drawable/man_on_street2b"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        back arrow-->
        <ImageView
            android:id="@+id/resetpassword_arrow_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_dim"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/phone_activ_tool_bar_arrow_str"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorTextSecondary" />

        <!--    main title-->

        <!--        sub title-->

        <!--        layout for reset password details-->
        <LinearLayout
            android:layout_width="408dp"
            android:layout_height="403dp"
            android:background="@drawable/login_details_drawable"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--            reset password section-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/titillium_web_bold"
                    android:text="@string/reset_password_str"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="20sp" />

                <!--                new password-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    android:alpha=".5"
                    android:text="@string/new_password_str"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/newpassword_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPassword" />

                <!--                confirm password-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="15dp"
                    android:alpha=".5"
                    android:text="@string/confirm_password_str"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/confirmpassword_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPassword" />


                <Button
                    android:id="@+id/resetpassword_confirm_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/btn_primary_shapes"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/confirm_password_change_btn_str"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:transitionName="@string/google_button_transition" />



            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>