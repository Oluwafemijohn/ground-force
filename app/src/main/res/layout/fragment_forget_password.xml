<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.ForgetPasswordFragment">

    <ImageView
        android:id="@+id/forget_password_iv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/lock"
        app:tint="@color/colorPrimary"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        />


    <EditText
        android:id="@+id/forget_password_TextEmailAddress_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:hint="@string/email_address_forgot_str"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/forget_password_iv"
        />
    <Button
        android:id="@+id/forget_password_reset_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_primary_shapes"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/reset_str"
        android:transitionName="@string/google_button_transition"
        android:textAllCaps="false"
        style="@style/colorWhiteSmallText"
        app:layout_constraintTop_toBottomOf="@id/forget_password_TextEmailAddress_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>